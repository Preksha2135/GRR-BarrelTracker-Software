{
  "name": "grr-barrels",
  "version": "1.0.0",
  "description": "GRR BarrelsTrack Desktop App",
  "main": "main.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\" \"npm run electron:dev\"",
    "client": "cd desktop-client && npm start",
    "client:build": "cd desktop-client && npm run build",
    "server": "cd server && node index.js",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "electron": "electron .",
    "build": "npm run client:build",
    "dist": "npm run build && electron-builder",
    "pack": "electron-packager . PernApp --platform=win32 --arch=x64 --icon=icon.ico"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "docx": "^9.5.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "react-router-dom": "^7.6.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.1",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.grrbarrels.desktop",
    "productName": "GRR Barrels App",
    "icon": "assets/icon",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "server/**/*",
      "desktop-client/build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server/",
        "to": "server/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
